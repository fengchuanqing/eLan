.page {
  /* background-color: #f5f6f7; */
  min-height: 100vh;
  padding: 32rpx 0;
  box-sizing: border-box;
}

.business_info {
  display: flex;
  padding: 31rpx 32rpx 37rpx;
  background: #fff;
  box-shadow: 0px 0px 8px 0px 
  rgba(47, 111, 247, 0.1);
}

.none {
  width: 305rpx;
  height: 416rpx;
  display: block;
  margin: 100rpx auto;
  background: none;
}
.business_info>image {
  width: 14.5vw;
  height: 14.5vw;
  background-color: #428ffc;
  border-radius: 50%;
  margin-right: 39rpx;
}
.business_info>view:nth-child(2){
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.business_name {
  width: 100%;
  font-size: 32rpx;
  color: #363a44;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.van-dropdown-menu__item{
  background: #f5f6f7;
}
.business_rate {
  font-size: 32rpx;
  color: #363a44;
  /* margin-top: 20rpx; */
  display: flex;
  align-items: center;
}

.business_rate image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 6rpx;
  vertical-align: middle;
}

.header {
  height: 135rpx;
  background: rgb(245,246,247);
}
.tabs{
  box-shadow: 0px 0px 8px 0px 
  rgba(47, 111, 247, 0.1);
}
.header .van-dropdown-menu{
  box-shadow: 0 0 0 0 #fff;
}
.header .search {
  font-size: 26rpx;
  padding: 0;
}
.header  .van-search {
  background: #f5f6f7 !important;
  width: 80vw;
}

.header  .van-search__content {
  background: #fff;
  box-shadow: 0px 0px 8px 0px 
  rgba(47, 111, 247, 0.1);
}


.listShow{
  padding: 0 32rpx;
  background: #fff;
}
.tabsBox{
  background-color: #fff;
}
view .van-tabs__scroll {
  background-color: unset;
}
.list>view .item:nth-child(1) {
border-top: solid 1rpx #e8e9ec;
}
.item{
  /* margin-top: 28rpx; */

  padding: 34rpx 0 23rpx;
  border-bottom: solid 1rpx #e8e9ec;
  display: flex;
}
.item>image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  
}
.item_info{
  font-size: 26rpx;
  color: #999999;
  width: calc(100% - 230rpx);
}
.shop_name{
  font-size: 32rpx;
  color: #242424;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop_name text:nth-child(1) {
  font-weight: 800;
}
.shop_tag{
  margin-top: 17rpx;
  margin-bottom: 19rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop_tag text{
  font-size: 24rpx;
  color: #428ffc;
  /* padding-right: 13rpx;
  border-right: 1rpx solid #ebf3fe;
  display: inline-block;
  margin-right: 13rpx; */
}
.shop_tag text:last-child{
  /* border: none; */
  font-size: 30rpx;
  color: #ff6a2a;
  font-style:oblique;
  font-weight: 800;
}
.shop_num{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.shop_num text{
  margin-bottom: 10rpx;
  color:#363a44;
}
.shop_buy{
  width: 160rpx;
	height: 60rpx;
	background-color: #428ffc;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.activity_item{
  background-color: #ffffff;
	box-shadow: 0px 3rpx 10rpx 0px 
		rgba(0, 0, 0, 0.07);
	border-radius: 10rpx;
  margin-top: 28rpx;
  padding: 27rpx 34rpx 24rpx 28rpx;
  color: #000000;
}
.activity_item>image{
  width: 100%;
  height: 228rpx;
	background-color: #ffc700;
}
.activity_item_tit{
  font-size: 30rpx;
  margin-top: 24rpx;
}
.activity_item_con{
  margin-top: 14rpx;
  font-size: 24rpx;
  line-height: 31rpx;
}
.activity_item_btm{
  margin-top: 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
  align-items: center;
}
.activity_item_submit{
  width: 160rpx;
	height: 61rpx;
	background-color: #428ffc;
  border-radius: 30rpx;
  text-align: center;
  line-height: 61rpx;
  color: #ffffff;
}