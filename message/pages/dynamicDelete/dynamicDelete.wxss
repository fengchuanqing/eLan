/* message/pages/dynamic/dynamic.wxss */
.item_box {
    margin: 20rpx 0;
    background-color: #fff;
    position: relative;
}

.i_check {
    position: absolute;
    left: 5%;
    top: 40%;
}

.i_margin {
    padding: 20rpx 30rpx;
    padding-left: 100rpx;
    margin-right: -80rpx;
    /* margin-left: 60rpx; */
}

.i_header {
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    position: relative;

}

.i_img {
    width: 50rpx;
    height: 50rpx;
}

.i_name {
    margin: 0 20rpx;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #363a44;
}

.zcbt {
    text-align: center;
    position: absolute;
    right: 40rpx;
    width: 116rpx;
    height: 42rpx;
    background-color: #e9f3fe;
    border-radius: 4rpx;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 45rpx;
    letter-spacing: 0rpx;
    color: #428ffc;
}

.i_content {
    height: 147rpx;
}

.i_color {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0rpx;
    color: #686b73;
}

.failReson {
    height: 56rpx;
    background-color: #feebec;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 60rpx;
    letter-spacing: 0rpx;
    padding-left: 35rpx;
    color: #e63633;
}

.i_bottom {
    display: flex;
    justify-content: space-between;
}

.i_num {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    margin-right: 80rpx;
    margin-left: 20rpx;
}

.i_n_color {
    color: #428ffc;
}

.bottom {
    background: #fff;
    position: fixed;
    left: 2%;
    bottom: 2%;
    display: flex;
    align-items: center;
    width: 100%;
}
.container{
    margin-bottom: 20vh;
}
.b_button_box {
    width: 75%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
}

.b_button {
    width: 48%;
    height: 72rpx;
    background-color: #428ffc;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ffffff;
    text-align: center;
    line-height: 72rpx;
}

.cancel {
    background-color: #ffffff;
    border: solid 1rpx #428ffc;
    color: #686b73;
}

.kkry {
    position: fixed;
    left: 30%;
    top: 15%;
}

.qfb {
    margin: 0 auto;
    width: 208rpx;
    height: 72rpx;
    background-color: #428ffc;
    border-radius: 36rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 60rpx;
    letter-spacing: 0rpx;
    color: #ffffff;
}

.none {
    width: 305rpx;
    height: 416rpx;
    margin: 58rpx auto;
    display: block;
}