/* message/pages/dynamic/dynamic.wxss */
.container{
    margin-top: 120rpx;
    margin-bottom: 20vh;
}
.tit{
  font-size: 32rpx;
  color: #363a44;
  font-weight: 800;
  margin: 32rpx 0;
}
.kkry {
    position: fixed;
    left: 30%;
    top: 15%;
}
.video{
    position: relative;
  }
  .video::after{
    position: absolute;
    left: 40%;
    top: 25%;
    content: '';
    width: 0;
    height: 0;
    border-style: solid;
    border-width:50rpx;
    border-color: transparent transparent transparent #fff;
  }
.qfb {
    margin: 0 auto;
    width: 208rpx;
    height: 72rpx;
    background-color: #428ffc;
    border-radius: 36rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 60rpx;
    letter-spacing: 0rpx;
    color: #ffffff;
}

.none {
    width: 305rpx;
    height: 416rpx;
    margin: 58rpx auto;
    display: block;
}
.imgList{
    margin: 0 auto;
    margin-top: 13rpx;
    display: grid;
    grid-template-columns: repeat(3,31.5%);
    /* grid-template-rows: repeat(3,205rpx); */
    grid-row-gap: 28rpx;
    grid-column-gap: 22rpx;
  }
  .item_img{
    width: 205rpx;
      height: 205rpx;
      background-color: #686b73;
      border-radius: 4rpx;
  }
.selected{
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    
    width: 100%;
    z-index: 99;
}
.item_box {
    margin: 20rpx 0;
    background-color: #fff;
}
.i_margin {
    padding: 20rpx 30rpx;
}

.i_header {
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    position: relative;

}

.i_img {
    width: 50rpx;
    height: 50rpx;
}

.i_name {
    margin: 0 20rpx;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #363a44;
}

.zcbt {
    text-align: center;
    position: absolute;
    right: 5%;
    width: 116rpx;
    height: 42rpx;
    background-color: #e9f3fe;
    border-radius: 4rpx;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 45rpx;
    letter-spacing: 0rpx;
    color: #428ffc;
}

.i_content {
   padding: 15rpx 30rpx;
}

.i_color {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0rpx;
    color: #686b73;
}

.failReson {
    height: 56rpx;
    background-color: #feebec;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 60rpx;
    letter-spacing: 0rpx;
    padding-left: 35rpx;
    color: #e63633;
}

.i_bottom {
    display: flex;
    justify-content: space-between;
}

.i_num {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    margin-right: 80rpx;
    margin-left: 20rpx;
}

.i_n_color {
    color: #428ffc;
}

.delete {
    position: fixed;
    bottom: 5%;
    left: 5%;
    width: 686rpx;
    height: 96rpx;
    background-color: #428ffc;
    border-radius: 48rpx;
    font-size: 36rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 96rpx;
    text-align: center;
    letter-spacing: 0rpx;
    color: #ffffff;
}
.btnBox{
    margin-top: 0;
    padding: 30rpx;
    width: 100%;
    display: flex;
    color: #686b73;
    font-size: 34rpx;
    justify-content: space-between;
  }
  .btnBox_l,.btnBox_r,.btnBox_r_l{
    display: flex;
    align-items: center;
  }
  .btnBox_l image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
  }
  .shareBtn{
    width: 35rpx;
    height: 35rpx;
    padding-left: 0;
    padding-right: 0;
    border: none;
    background-color: #ffffff;
    margin-left: 64rpx;
    line-height: 15rpx;
    border-radius: 0;
  }
  .shareBtn::after{
    border: none;
  }
  .share{
    width: 35rpx;
    height: 35rpx;
  }
  .btnBox_r_l image{
    width: 40rpx;
    height: 35rpx;
    margin-right: 15rpx;
  }
  .pop{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999999999999;
  }
  .send{
    position: absolute;
    bottom: 0;
    left: 0;
    /* height: 30%; */
    width: 100%;
    background: #fff;
    border-radius:10rpx 10rpx 0 0 ;
    padding: 20rpx;
  } 
  .fabiao{
      padding: 0;
      font-size: 32rpx;
      background: rgb(62, 140, 204);
      text-align: center;
      line-height: 50rpx;
      width: 100rpx;
      color: #fff;
      margin-left: 80vw;
      margin-top: 20rpx;
  }