/* pages/Commodity/placeOrder/placeOrder.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6f7;
  padding: 32rpx;
  box-sizing: border-box;
}

.item {
  padding: 32rpx 24rpx 40rpx 18rpx;
  background-color: #fff;
  position: relative;
  border-radius: 20rpx;
}
.goods{
  display: flex;
  position: relative;
  border-bottom: 1rpx solid #eeeeee;
  padding: 20rpx 0;
}
.i_img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.i_img>image {
  width: 100%;
  height: 100%;
}

.i_text>view:nth-child(1) {
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 50rpx;
  letter-spacing: 0rpx;
  color: #272727;
}

.i_text>view:nth-child(2) {
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  /* line-height: 72rpx; */
  letter-spacing: 0rpx;
  color: #666666;
}
.i_text .gg{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #363a44;
  margin-top: 5rpx;
}
.right_back {
  position: absolute;
  right: 3%;
  top: 30%;
}

.right_back>image {
  padding: 20rpx;
  width: 14rpx;
  height: 24rpx;
}

.d_main {
  margin-top: 25rpx;
  padding: 31rpx 27rpx 29rpx 17rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.d_type {
  padding-bottom: 34rpx;
  font-weight: 700;
  font-size: 32rpx;
  font-stretch: normal;
  line-height: 42rpx;
  letter-spacing: 0rpx;
  color: #141414;
  border-bottom: 2rpx solid #f6f6f6;
}

.d_type>text {
  margin: 0 10rpx;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 46rpx;
  letter-spacing: 0rpx;
  color: #141414;
}

.d_detail {
  margin-top: 31rpx;
}

.d_detail>view {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 42rpx;
  letter-spacing: 0rpx;
  margin-bottom: 31rpx;
  display: flex;
}

.d_detail>view>text {
  color: #141414;
  width: 25%;
}

.d_detail>view>text:nth-child(1) {
  color: #999999;
}

.d_detail>view>text:nth-child(2) {
  width: 68%;
}

.d_bottom {
  width: 100%;
  height: 127rpx;
  position: fixed;
  z-index: 1;
  bottom: 0%;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #ffffff;
  box-sizing: content-box;
}

.d_b_qrsh {
  width: 591rpx;
  height: 96rpx;
  background-color: #548ff4;
  border-radius: 48rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: normal;
  font-stretch: normal;
  line-height: 96rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
}

.d_b_lxsj {
  display: flex;
  flex-direction: column;
}

.d_b_lxsj>text {
  font-size: 20rpx;
  font-weight: bold;
  font-stretch: normal;
  line-height: 35rpx;
  letter-spacing: 0rpx;
  color: #222222;
}

.d_b_lxsj>image {
  width: 43rpx;
  height: 38rpx;

}

/* 店家微信 */
.block {
  width: 600rpx;
  /* height: 681rpx; */
  padding-bottom: 20rpx;
  margin: 30% auto;
  background-color: #ffff;
}

.close_box {
  position: relative;
  height: 30rpx;
}

.close {
  position: absolute;
  display: block;
  right: 15rpx;
  top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 999;
}

.smjwx {
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 75rpx;
  letter-spacing: 0rpx;
  color: #141414;
}

.b_margin {
  display: block;
  width: 80%;
  margin: 0 auto;
}

.sjrx {
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.grey_text {
  width: 92%;
  margin: 0 auto;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 55rpx;
  letter-spacing: 0rpx;
  color: #999999;
}

.center {
  text-align: center;
}

.sjrx>input {
  width: 160rpx;
  height: 60rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  border: 1px solid #3388ff;
  color: #3388ff;
  font-size: 28rpx;
}

.address {
  padding: 33rpx 12rpx 28rpx;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 27rpx;
  overflow: hidden;
}

.a_first {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 56rpx;
  letter-spacing: 0rpx;
  color: #141414;
  margin-top: 27rpx;
}

.a_second {
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 56rpx;
  letter-spacing: 0rpx;
  color: #141414;
  font-weight: 700;
}

.a_third {
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 58rpx;
  letter-spacing: 0rpx;
  color: #141414;
}

.a_line {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 4rpx;
}

.overImg{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  max-width: 80%;
  height: 900rpx;
}