/* pages/Receiving/addaddress/addaddress.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  position: relative;
}
.box {
  width: 92%;
  margin: 0 auto;
  padding: 20rpx 0;
}
.zntx{
  background-color: #fff;
  border-radius: var(--cell-group-inset-border-radius,8px);
    margin: var(--cell-group-inset-padding,0 16px);
    overflow: hidden;
    margin-bottom: 20rpx;
}
.zntxTip{
  font-size: 24rpx;
  color: #666666;
  padding: 20rpx;
}
.zntx textarea{
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.zntx textarea::-webkit-input-placeholder{
  color: #eeeeee;
}
.van-cell__value{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #323233 !important;
}

.a_bottom {
  width: 100%;
  position: absolute;
  bottom: 2%;
}

.a_bottom>view {
margin: 0 auto;
  width: 702rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #fff;
  background-color: #3388ff;
  border-radius: 48rpx;
}
.e_delete {
  width: 100%;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
  color: #3e82ff;
  background-color: #fff;
  text-align: center;
  padding: 40rpx 0;
}