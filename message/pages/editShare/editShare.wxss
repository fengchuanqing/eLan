.steps {
  height: 181rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 2rpx 24rpx 0rpx rgba(47, 111, 247, 0.16);
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.first {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.first_t {
  width: 56rpx;
  height: 56rpx;
  background-color: #ffffff;
  border: solid 1rpx #b3b5b9;
  border-radius: 28rpx;
  text-align: center;
  line-height: 56rpx;
  color: #b3b5b9;
  font-size: 30rpx;
}
.name {
  margin-top: 21rpx;
}
.line {
  width: 300rpx;
  height: 1rpx;
  background-color: #b3b5b9;
  position: absolute;
  top: 31px;
  left: 50%;
  transform: translateX(-48%);
}
.curStep,.curStep2{
  color: #428ffc;
}
.curStep .first_t{
  background-color: #428ffc;
  color: #ffffff;
}
.curStep2 .first_t{
  border: solid 1rpx #428ffc;
}
.curStep2 .first_t image{
  width: 33rpx;
	height: 23rpx;
}
.container{
  margin-top: 19rpx;
  background-color: #ffffff;
	box-shadow: 0rpx 2rpx 24rpx 0rpx 
		rgba(47, 111, 247, 0.16);
}
.submit{
  width: 80%;
	height: 108rpx;
	background-color: #428ffc;
  border-radius: 54rpx;
  text-align: center;
  line-height: 108rpx;
  color: #ffffff;
  font-size: 36rpx;
  margin: 150rpx auto;
  font-weight: bold;
}
.btnBox{
  margin-top: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.btnBox>view{
  width: 336rpx;
	height: 108rpx;
	border-radius: 54rpx;
	border: solid 1rpx #428ffc;
  text-align: center;
  line-height: 108rpx;
  font-weight: bold;
  color: #428ffc;
  font-size: 36rpx;
}
.save{
  background-color: #428ffc;
  color: #ffffff !important;
}
.van-field__label{
  width: 200rpx;
}
.remark{
  border-bottom: 1rpx solid #e8e9ec;
  font-size: 28rpx;
  padding: 25rpx 30rpx;
  color: #323232;
  background-color: #ffffff;
  font-weight: 200;
}
.remark textarea{
  width: 100%;
  min-height: 180rpx;
	background-color: #edeff2;
	border-radius: 12rpx;
  margin-top: 36rpx;
  color: #323232;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}