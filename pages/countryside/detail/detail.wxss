/* pages/countryside/detail/detail.wxss */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  /* justify-content: center; */
}

.footer view {
  width: 454rpx;
  height: 55rpx;
  background-color: #e8e9ec;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #b3b5b9;
}

.footer view image {
  width: 23rpx;
  height: 23rpx;
  margin: 0 18rpx 0 22rpx;
}

.footer image {
  width: 49rpx;
  height: 49rpx;
}

.footer image:nth-child(2) {
  margin: 0 36rpx;
}

.footer image:nth-child(3) {
  margin-right: 17rpx;
  width: 42rpx;
  height: 42rpx;
}

.footer text {
  font-size: 28rpx;
  color: #b3b5b9;
}

.swiperList {
  width: 100%;
  height: 100vw;
  /* height: 541rpx; */
  position: relative;
}

.swiperList swiper-item {
  display: flex;
  align-items: center;
  background: #000;
}

.swiperList image {
  width: 100%;
  /* height: auto; */
  max-height: 100vw;
  overflow: auto;
  background: rgb(173, 163, 163);
}
.swiperList video {
  width: 100%;
}
.content {
  padding: 31rpx;
  padding-bottom: 200rpx;
  background: #fff;
}

.h3 {
  font-size: 32rpx;
  color: #363a44;
  font-weight: 800;
  margin: 32rpx 0;
}

.text {
  font-size: 28rpx;
  color: #686b73;
  line-height: 40rpx;
  word-wrap: break-word;
  margin-bottom: 30rpx;
}

.comment {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #363a44;
}

.comment view {
  height: 32rpx;
  background: #428ffc;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  padding: 0 20rpx;
  margin-left: 20rpx;
  border-radius: 5rpx;
}

.message {
  position: fixed;
  left: 8rpx;
  top: 80vw;
  /* width: 305rpx; */
  height: 68rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  color: #fff;
  display: flex;
  align-items: center;
  padding-right: 16rpx;
}

.message image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 8rpx;
  background: rgb(71, 45, 45);
}

.message > view > view {
  font-size: 20rpx;
}

.onlyText {
  width: 100%;
  /* height: 150rpx; */
  background-color: #fff;
  border-radius: 8rpx;
  color: #363a44;
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.onlyText image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 8rpx;
  border-radius: 50%;
  background: rgb(71, 45, 45);
}

.onlyText > view > view {
  font-size: 20rpx;
}

.btn {
  position: absolute;
  right: 20rpx;
  bottom: 0;
  padding: 0;
  font-size: 32rpx;
  background: rgb(62, 140, 204);
  text-align: center;
  line-height: 50rpx;
  width: 100rpx;
  color: #fff;
}

.commentList {
  padding: 50rpx 0 10rpx 0;
}

.commentList .item > image {
  width: 76rpx;
  height: 76rpx;
  background: #000;
  margin-right: 15rpx;
}

.commentList .item {
  display: flex;
  font-size: 28rpx;
  color: #999999;
}

.commentList .zan {
  width: 27rpx;
  height: 27rpx;
}

.personM {
  height: 76rpx;
}

.commentMessage {
  width: 100%;
}

.commentMessage .row1 {
  display: flex;
  justify-content: space-between;
}

.commentMessage .row1 image {
  margin-left: 30rpx;
}

.commentMessage .pltext {
  margin: 36rpx 0 26rpx;
  color: #333333;
}

.pop {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999999999999;
}

.send {
  position: absolute;
  bottom: 0;
  left: 0;
  /* height: 30%; */
  width: 100%;
  background: #fff;
  border-radius: 10rpx 10rpx 0 0;
  padding: 20rpx;
}

.fabiao {
  padding: 0;
  font-size: 32rpx;
  background: rgb(62, 140, 204);
  text-align: center;
  line-height: 50rpx;
  width: 100rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 80vw;
  margin-top: 20rpx;
}

.reply {
  margin: 15rpx 0;
  display: flex;
  justify-content: space-between;
  color: rgb(43, 125, 192);
}

.fpl {
  padding: 30rpx 30rpx 30rpx 10rpx;
  background: #f5f5f5;
  font-size: 28rpx;
}

.fpl text {
  color: #428ffc;
}

button {
  padding: 0;
  border: none;
  line-height: 0rpx;
  border-radius: 50%;
}
