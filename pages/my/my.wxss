/* merchant/pages/own/own.wxss */
.own {
  color: #363a44;
  font-size: 32rpx;
}

.own .top,
.own .middle,
.owm .bottom {
  margin-bottom: 23rpx;
}

.own .title {
  position: fixed;
  width: 100%;
  top: 66rpx;
  line-height: 34px;
  display: flex;
  justify-content: space-between;
  font-family: PingFang-SC-Medium;
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 26rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
  z-index: 99;
  padding: 0 28rpx;
}

.own .top .headerBg {
  position: relative;
  height: 365rpx;
}

.headerBg image {
  width: 100%;
  position: absolute;
  z-index: -1;
  height: 440rpx;
}

.top .headerBg .text {
  width: 331rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
}

.headerBg .text>view:nth-child(1) {
  font-size: 42rpx;
  line-height: 45rpx;
}

.headerBg .text view:nth-child(2) {
  width: 293rpx;
  font-size: 28rpx;
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
}

.top .context {

  width: 100%;
  height: 258rpx;
  background-color: none;
  display: flex;
  padding: 22rpx 31rpx;
  box-shadow: 0rpx 2rpx 24rpx 0rpx rgba(47, 111, 247, 0.16);
}

.top .context .jindt {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 0;
}
.top .context .jindt .bfb{
  position: absolute;
  top: 26%;
  /* left: 5rpx; */
  color: #fff;
  font-size: 14rpx;
}
.top .context .jindt .tip {

  height: 25rpx;
  padding: 5rpx;
  color: #00b578;
  position: absolute;
  border: 1rpx solid #00b578;
  border-radius: 10rpx;
  font-size: 14rpx;
  line-height: 10rpx;
  text-align: center;
  top: -66%;
  /* left: 0; */
  background: #fff;
  z-index: 9;
}
.top .context .jindt .tip::after{
  content: '';
  position: absolute;
  left: 3rpx;
  top: 19rpx;
 border-width: 10rpx;
 border-style: solid;
 border-color: #00b578 transparent transparent transparent ; 
 z-index: 8;


}

.top .context .text .jindt .progress-box {
  width: 444rpx;
  margin-top: 0;
}

.top .context .jindt text {
  color: #686b73;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.top .context .profile {
  width: 143rpx;
  height: 143rpx;
  margin-right: 19rpx;
  background: #000;
  border-radius: 50%;
}

.top .context .profile image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.top .context .text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top .context .text>view:nth-child(1) {
  margin-top: 45rpx;
  font-size: 36rpx;
}

.top .context .text>view:nth-child(2) {
  font-size: 28rpx;
}

.top .context .text>view:nth-child(2) text {
  width: 69rpx;
  height: 39rpx;
  text-align: center;
  line-height: 39rpx;
  margin-left: 10rpx;
  background-color: rgba(252, 154, 6, 0.199);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #ff6a4a;
}
.bindPhone{
  border: none;
  width: fit-content;
  color: #428ffc !important;
  margin: 0;
  padding: 0;
}
.bindPhone::after{
  display: none;
}
.phoneBox{
  font-size: 24rpx;
}
.own .middle {
  padding: 31rpx;
  box-shadow: 0rpx 2rpx 24rpx 0rpx rgba(47, 111, 247, 0.16);
}

.middle .titleApp {
  color: #363a44;
  font-size: 36rpx;
  font-weight: 700;
}

.middle .myApp {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding: 0 40rpx 18rpx;
}

.middle .myApp .myAppItem {
  width: 109rpx;
  margin-top: 50rpx;
  margin-right: 140rpx;
}

.middle .myApp .myAppItem:nth-child(3),
.middle .myApp .myAppItem:nth-child(6) {
  margin-right: 0;
}

.middle .myApp .myAppItem .icon {
  position: relative;
}

.middle .myApp .myAppItem image {
  width: 100%;
  height: 108rpx;
}

.myApp .myAppItem .kuang {
  width: 210rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
}

.myApp .myAppItem .messageNumber {
  font-size: 16rpx;
  /* padding: 8rpx;
  border-radius: 20rpx; */

  /* background: #fff; */
}

.myApp .myAppItem .messageNumber text {
  background: #ff5630;
  /* padding: 6rpx; */
  border-radius: 26rpx;
  color: #fff;
  white-space: nowrap;
  width: 26rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  display: block;
}

.myApp .myAppItem .name {
  text-align: center;
  color: #363a44;
  font-size: 28rpx;
}

.bottom {
  box-shadow: 0rpx 2rpx 24rpx 0rpx rgba(47, 111, 247, 0.16);
  margin-bottom: 36rpx;
}
.bluet{
  color: #428ffc !important;
}