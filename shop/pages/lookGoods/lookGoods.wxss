.none{
  margin-top: 307rpx;
  text-align: center;
}
.none image{
  width: 440rpx;
	height: 275rpx;
}
.none view{
  font-size: 26rpx;
  color: #222222;
  margin-top: 82rpx;
}
.add{
  width: 90%;
  height: 88rpx;
	background-color: #428ffc;
  border-radius: 44rpx;
  position: fixed;
  bottom: 6%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  display: block;
}
.activityList{
  margin-top: 32rpx;
  margin-bottom: 100rpx;
  padding: 0 28rpx 0 32rpx;
}
.item{
  border-bottom: 2rpx solid #f6f6f6;
  padding-bottom: 30rpx;
}
.item .status{
  font-size: 24rpx;
  color: #b3b5b9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .status text:first-child{
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}
.item_con{
  margin-top: 32rpx;
  display: flex;
}
.item_con >image,.item_con >video{
  width: 158rpx;
	height: 158rpx;
}
.item_con .info{
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #686b73;
  width: calc(100% - 188rpx);
}
.item_con .info .name{
  font-size: 26rpx;
  color: #000000;
}
.item_con .info .pro{
  height: 80rpx;
}
.item_con .info .more{
  width: 52rpx;
	height: 28rpx;
	background-color: #eff2f9;
  border-radius: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #8892a9;
  letter-spacing: 5rpx;
  float: right;
  position: relative;
}
.btnBox{
  width: 351rpx;
	height: 106rpx;
	background-color: rgba(0,0,0,.8);
  border-radius: 5rpx;
  position: absolute;
  left: -400rpx;
  top: -50rpx;
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
  color: #fff;
  align-items: center;
}
.btnBox::after{
  content: "";
  width: 0;
    height: 0;
    border-top: 20rpx solid transparent;
    border-left: 28rpx solid rgba(0,0,0,.8);
    border-bottom: 20rpx solid transparent;
    position: absolute;
    right: -28rpx;
    top: 50%;
    margin-top: -10rpx;
}
.btn navigator{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}
.btnBox .btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btnBox .btn image{
  width: 30rpx;
  height: 32rpx;
  margin-bottom: 10rpx;
}