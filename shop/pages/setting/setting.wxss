.update{
  color: #3377ff;
  font-size: 30rpx;
}
.submit{
  margin: 50rpx 32rpx;
  border-radius: 10rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #4482ff;
}
.fmSrc{
  width: 600rpx;
  height: 300rpx;
  margin: 20rpx auto;
}
.fmSrc image{
  width: 100%;
  height: 100%;
}
.tip{
  color: red;
  padding: 0 30rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
view .van-button{
  width: 100% !important;
}
.a_box {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1rpx solid rgb(241, 238, 238);
}
.picUpload {
  width: 379rpx;
  height: 215rpx;
  background-color: rgba(175, 181, 185, 0.1);
  border-radius: 8rpx;
  border: 1rpx solid #b3b5b9;
  text-align: center;
  line-height: 215rpx;
  font-size:50rpx ;
}
.picBg{
  background: #fff;
  display: flex;
  justify-content: center;
}

.uploadBox {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 34rpx;
  padding: 0 32rpx;
}

.imgList {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.imgList image {
  width: 100%;
  height: 100%;
}

.close {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #428ffc;
  border: solid 1rpx #3377ff;
  text-align: center;
  line-height: 26rpx;
  font-size: 30rpx;
  color: #ffffff;
  position: absolute;
  left: -13rpx;
  top: -7rpx;
  z-index: 11;
}

.uploadBtn {
  width: 151rpx;
  height: 150rpx;
  background-color: #f6f6f6;
  border-radius: 5rpx;
  border: solid 1rpx #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 22rpx;
  color: #999999;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.uploadBtn image {
  width: 56rpx;
  height: 47rpx;
  display: block;
  margin-bottom: 16rpx;
}

.tip {
  font-size: 22rpx;
  color: #222222;
  margin: 20rpx 0;
  padding: 0 32rpx;
}
.tip text{
  color: #ff0000;
}