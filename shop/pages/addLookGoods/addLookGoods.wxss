
.uploadBox{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 34rpx;
  padding: 0 32rpx;
}
.imgList{
  width: calc(100% - 64rpx);
	/* height: 150rpx; */
  position: relative;
  margin-bottom: 20rpx;
}
.imgList image,.imgList video{
  width: 100%;
}
.close{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
	background-color: #428ffc;
  border: solid 1rpx #3377ff;
  text-align: center;
  line-height: 26rpx;
  font-size: 30rpx;
  color: #ffffff;
  position: absolute;
  left: -13rpx;
  top: -7rpx;
  z-index: 11;
}
.imgList .zt{
  width: 80rpx;
	height: 32rpx;
	background-color: rgba(0,0,0,.5);
  border-radius: 16rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  right: 4rpx;
  bottom: 10rpx;
  font-size: 20rpx;
  color: #ffffff;
}
.imgList .zt image{
  width: 18rpx;
  height: 14rpx;
  margin-right: 5rpx;
}
.uploadBtn{
  width: 151rpx;
	height: 150rpx;
	background-color: #f6f6f6;
	border-radius: 5rpx;
  border: solid 1rpx #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 22rpx;
  color: #999999;
  margin-left: 20rpx;
}
.uploadBtn>view{
  font-size: 40rpx;
  margin-bottom: 16rpx;
}
.btn-area{
  width: 90%;
  display: flex;
  padding: 0 32rpx;
  justify-content: space-between;
  margin: 50rpx 0;
  position: fixed;
  bottom: 15rpx;
  left: 50%;
  transform: translateX(-50%);
}
.btn-area button{
  width: 100% !important;
	height: 72rpx;
	background-color: #ebf2fe;
	border-radius: 36rpx;
	border: solid 1rpx #428ffc;
  padding: 0;
  line-height: 72rpx;
  color: #428ffc;
  font-weight: normal;
}
.btn-area button:first-child{
  background-color: #428ffc;
  color: #ffffff;
}