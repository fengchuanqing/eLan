.top {
  height: 230rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-image: linear-gradient(#94d3ff, #66ddff);
}

.isActive {
  color: #66ddff;
}

.top .user {
  height: 100%;
  display: flex;
  align-items: center;
}

.user .photo {
  width: 139rpx;
  height: 139rpx;
  border-radius: 50%;
  border: 6rpx solid #ffffff;
  box-sizing: border-box;
  flex-grow: 0;
  flex-shrink: 0;
}

.user .name {
  font-size: 36rpx;
  color: #ffffff;
  margin-left: 26rpx;
}

.user .name .author {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.top .share {
  width: 42rpx;
  height: 46rpx;
}

.user .name>text {
  font-size: 24rpx;
  margin-right: 40rpx;
}

.title {
  height: 62rpx;
  border-bottom: 1rpx solid #bfbfbf;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title .title_left {
  display: flex;
  align-items: center;
}

.title_item {
  font-size: 28rpx;
  color: #000000;
  margin-right: 115rpx;
  padding: 0 20rpx;
}

.title_item image {
  width: 12rpx;
  height: 22rpx;
  margin-left: 11rpx;
}

.title_right {
  padding: 0 17rpx;
  height: 31rpx;
  border-left: 1rpx solid #b5b5b5;
  display: flex;
  align-items: center;
}

.title_right image {
  width: 22rpx;
  height: 22rpx;
}

.shopList {
  padding: 0 20rpx;
  padding-bottom: 150rpx;
}

.shopList .shopItem {
  padding-right: 10rpx;
  display: flex;
  margin-top: 26rpx;
}

.shopImage {
  width: 163rpx;
  height: 163rpx;
  border-radius: 10rpx;
  margin-right: 19rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.shopImage image {
  width: 100%;
  height: 100%;
}

.shopInfo {
  border-bottom: 1rpx solid #bfbfbf;
  padding: 0 0 17rpx;
  width: 75%;
  box-sizing: border-box;
}

.shopInfo .shopTitle {
  font-size: 28rpx;
  color: #000000;
  font-weight: 600;
}

.shopInfo .shopTag {
  margin: 15rpx 0;
}

.shopTag .van-tag {
  margin-right: 12rpx;
  font-size: 20rpx;
}

.shopPrice {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  font-size: 20rpx;
  color: #969595;
}

.shopPrice .price {
  font-size: 28rpx;
  color: #ff0000;
}

.shopPrice .num {
  font-size: 18rpx;
  color: #767676;
}

.shopPrice image {
  width: 40rpx;
  height: 40rpx;
}

