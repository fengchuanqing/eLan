.selectSearch {
  /* height: 134rpx; */
  display: flex;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.selectSearch .van-search {
  width: 78vw;
  background: #f5f6f7 !important;
}
.selectSearch .van-dropdown-menu__item {
  background: #f5f6f7;
}
.selectSearch .van-dropdown-menu {
  box-shadow: 0 0 0 0 #fff;
}
.selectSearch .van-search__content {
  background: #fff;
  box-shadow: 0px 0px 10px 0px rgba(47, 111, 247, 0.1);
}
.list {
  padding: 0 32rpx;
  padding-bottom: 220rpx;
}
.item {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20px;
  padding: 32rpx;
}
.itemTop {
  border-bottom: 1rpx solid #eee;
}
.imgBox {
  position: relative;
}
.imgBox > image {
  width: 100%;
  /* height: 311rpx; */
  background-color: #1989fa;
}
.imgBox > view {
  width: 118rpx;
  height: 58rpx;
  border-top-right-radius: 29rpx;
  border-bottom-right-radius: 29rpx;
  font-size: 36rpx;
  color: #ffffff;
  text-align: center;
  line-height: 58rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.itemInfo {
  margin-bottom: 36rpx;
}
.zwName {
  color: #428ffc;
}
.zwStatus {
  background-color: #428ffc;
}
.zwJy {
  background-color: #b3b5b9;
}
.xm {
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.itemBtm {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 36rpx;
}
.btn {
  width: 150rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 58rpx;
  /* font-size: 24rpx; */
  border: 1rpx solid #c9c9c9;
  margin-right: 30rpx;
}
.add{
  width: 100%;
  height: 128rpx;
  padding: 16rpx 36rpx 0;
	background-color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.addBtn {
  width: 100%;
  height: 88rpx;
	background-color: #428ffc;
