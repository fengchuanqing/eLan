.nav{
    display: flex;
    justify-content: space-between;
    padding: 32rpx;
    background: #fff;
}
.nav>view{
    width: 21%;
    height: 114rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    align-content: space-between;
}
.nav>view text{
    width: 100%;
    color: #2b333f;
    font-size: 28rpx;
    text-align: center;
}
.nav .bgk{
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background-color: #f5f5f5;
    display: flex;
    justify-content: center;
    align-items: center;
}
.nav>view image{
    width: 48rpx;
    height: 48rpx;
}
.container .h3{
    position: relative;
    display: flex;
    padding:  0 36rpx 0 32rpx;
justify-content: space-between;
height: 95rpx;
    line-height: 95rpx;
    font-family: PingFangSC-Semibold;
	font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
    color: #428ffc;
 
}

.container .h3 text:first-child{
    margin-left: 17rpx;
}
.container .h3 text:first-child::before{
    content: '';
    width: 5rpx;
    height: 24rpx;
   background: #428ffc;
   position: absolute;
   top: 36rpx;
   left: 32rpx;
}
.container .h3 text:last-child{
    color: #b3b5b9;
    font-size: 24rpx;
}
.muban{ 
    width: 100%;
    height: 174rpx;
    background: #fff;
    padding: 21rpx 32rpx 20rpx;
    display: flex;
    margin-bottom: 32rpx;
}
.muban .text{
    width: 477rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 31rpx;
    font-size: 24rpx;
    color: #363a44;
}
.muban image{
    width: 177rpx;
	height: 133rpx;
	background-color: #363a44;
}
.muban .text view{
    display: flex;
    justify-content: space-between;
}
.muban .text view:nth-child(1) text:nth-child(1){
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #363a44;
}
.muban .text view:nth-child(1) text:nth-child(2){
    color: #fff;
    font-size: 28rpx;
    width: 110rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
	background-image: linear-gradient(0deg, 
		#3a89eb 0%, 
		#99c2f4 100%), 
	linear-gradient(
		#428ffc, 
		#428ffc);
	background-blend-mode: normal, normal;
	border-radius: 8rpx;
}
.muban .text view:nth-child(2){
	color: #686b73;
}

.muban .text view:nth-child(3) text:first-child{
    width: 120rpx;
	height: 51rpx;
	font-family: PingFangSC-Regular;
    font-size: 24rpx;
    line-height: 25rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #b3b5b9;
}
.muban .text view:nth-child(3) text:last-child{
    height: 25rpx;
    margin-top: 25rpx;
    font-size: 28rpx;
    color: #5cbdd7;
    line-height: 25rpx;
}
.bctk .muban{
    padding: 11rpx 30rpx;
    height: 213rpx;
    box-shadow: -8rpx 5rpx 22rpx 0rpx 
		rgba(0, 0, 0, 0.16);
}
.bctk .muban image{
    width: 192rpx;
    height: 192rpx;
    border-radius: 8rpx;
}
.bctk .muban .text {
    padding: 15rpx 0 20rpx;
}
.bctk .muban .text view:nth-child(2) text{
    width: 123rpx;
	height: 43rpx;
	border-radius: 8rpx;
    border: solid 1rpx #428ffc;
    color: #428ffc;
    text-align: center;
    line-height: 43rpx;
}
.bctk .muban .text view:nth-child(3) {
    font-family: PingFangSC-Regular;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #b3b5b9;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 330rpx;
    display: block;
}

