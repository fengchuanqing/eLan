/* pages/micro/bctkDetails/bctkDetails.wxss */
.img,
.imgList {
  width: 100%;
  height: 100vw;
  /* height: 541rpx; */
  position: relative;
}
.container {
  padding-bottom: 20vh;
}
.img image {
  width: 100%;
  height: 100%;
}

.img .text3 {
  width: 100%;
  height: 126rpx;
  padding: 30rpx 0 17rpx 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  background: rgba(0, 0, 0, 0.8);
}

.img view text {
  width: 100%;
  font-weight: 800;
}

.img view text:nth-child(1) {
  font-size: 36rpx;
}

.img view text:nth-child(2) {
  font-size: 30rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  margin: 46rpx 0;
}

.tab {
  width: 148rpx;
  height: 52rpx;
  border-radius: 26rpx;
  color: #686b73;
  font-size: 28rpx;
  font-weight: 800;
  text-align: center;
  line-height: 52rpx;
}

.active {
  background-color: #428ffc;
  color: #fff;
}

.content {
  padding: 0 69rpx 0 32rpx;
  margin-bottom: 100rpx;
}

.h3 {
  padding: 32rpx 0 15rpx 0;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #363a44;
}

.content text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  font-weight: bold;
  font-stretch: normal;
  line-height: 37rpx;
  letter-spacing: 0rpx;
  color: #686b73;
}

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 96rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.bottom image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 17rpx;
}

.left {
  width: 259rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background: #fff;
  color: #428ffc;
}

.right button {
  width: 491rpx;
  height: 100%;
  background-color: #428ffc;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
  border: none;
  border-radius: 0;
}
