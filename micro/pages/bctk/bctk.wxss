/* pages/micro/bctk/bctk.wxss */
.header{
    height: 110rpx;
    overflow: hidden;
}
.van-dropdown-menu{
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: space-between;
}
.muban{ 
    width: 100%;
    background: #fff;
    display: flex;
    margin-top: 10rpx;
    margin-bottom: 32rpx;
    padding: 11rpx 30rpx;
    height: 213rpx;
    box-shadow: -8rpx 5rpx 22rpx 0rpx 
		rgba(0, 0, 0, 0.16);
}
.muban .text{
    width: 477rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 31rpx;
    font-size: 24rpx;
    color: #363a44;
    padding: 15rpx 0 20rpx;
}
.muban image{
    width: 192rpx;
    height: 192rpx;
    border-radius: 8rpx;
}
.muban .text view{
    display: flex;
    justify-content: space-between;
}
.muban .text view:nth-child(1) text:nth-child(1){
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #363a44;
}
.muban .text view:nth-child(1) text:nth-child(2){
    color: #fff;
    font-size: 28rpx;
    width: 110rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
	background-image: linear-gradient(0deg, 
		#3a89eb 0%, 
		#99c2f4 100%), 
	linear-gradient(
		#428ffc, 
		#428ffc);
	background-blend-mode: normal, normal;
	border-radius: 8rpx;
}
.muban .text view:nth-child(2) text{
    width: 123rpx;
	height: 43rpx;
	border-radius: 8rpx;
    border: solid 1rpx #428ffc;
    color: #428ffc;
    text-align: center;
    line-height: 43rpx;
}

.muban .text .con {
    font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #b3b5b9;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 400rpx;
    display: block;
}
.none{
    width: 305rpx;
    height: 416rpx;
    margin: 58rpx auto;
    display: block;
  }

