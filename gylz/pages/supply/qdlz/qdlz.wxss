.unit{
  color: #363a44;
}
.submit{
  margin: 50rpx 20rpx;
  height: 108rpx;
	background-color: #428ffc;
	border-radius: 54rpx;
  text-align: center;
  line-height: 108rpx;
  font-size: 36rpx;
  color: #ffffff;
}
.temp{
  padding: 35rpx 32rpx;
  background-color: #ffffff;
  color: #646566;
  font-size: 28rpx;
}
.uploadBox {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.imgList {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.imgList image {
  width: 100%;
  height: 100%;
}

.close {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #428ffc;
  border: solid 1rpx #3377ff;
  text-align: center;
  line-height: 26rpx;
  font-size: 30rpx;
  color: #ffffff;
  position: absolute;
  left: -13rpx;
  top: -7rpx;
  z-index: 11;
}

.imgList .zt {
  width: 80rpx;
  height: 32rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 16rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  right: 4rpx;
  bottom: 10rpx;
  font-size: 20rpx;
  color: #ffffff;
}

.imgList .zt image {
  width: 18rpx;
  height: 14rpx;
  margin-right: 5rpx;
}

.uploadBtn {
  width: 151rpx;
  height: 150rpx;
  background-color: #f6f6f6;
  border-radius: 5rpx;
  border: solid 1rpx #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 22rpx;
  color: #999999;
  margin-left: 20rpx;
}

.uploadBtn image {
  width: 100%;
  height: 100%;
}