.model-calendar {
  width: 100%;
  /* height: 534rpx; */
  background-color: #ffffff;
  margin-top: 24rpx;
  padding: 28rpx 38rpx;
}

.model-calendar-top {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #363a44;
}

.model-calendar-leftarrow {
  width: 19rpx;
  height: 32rpx;
}

.model-calendar-ym {
  margin: 0 100rpx;
}

/* 日历 */
.date-box {
  padding: 10rpx 0;
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.date-box>.date-day {
  position: relative;
  display: inline-block;
  width: 51rpx;
  text-align: center;
  vertical-align: middle;
  margin-top: 12rpx;
  padding: 12rpx 19rpx;
  box-sizing: content-box;
}
/* .date-box>.date-day:nth-child(7n+1){
  padding-left: 10rpx;
} */
.date-box .kong{
  background-color:#ffffff;
  box-shadow:none;
}
.date-yq{
  width: 12rpx;
	height: 12rpx;
  background-color: #00b578;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  bottom: -18rpx;
  transform: translateX(-50%);
}
.date-head {
  width: 100%;
  height: 51rpx;
  line-height: 51rpx;
  color: #00b578;
  font-size: 31rpx;
  box-shadow: 0 0 10rpx 6rpx rgba(109, 118, 105, .2);
  border-radius: 18rpx;
  border-top-right-radius: 0;
  background-color: rgba(231, 249, 248, .6);
}
.date-bj{
  background-color: rgba(197, 224, 255, .3);
}
.leftRadius{
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.rightRadius{
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}